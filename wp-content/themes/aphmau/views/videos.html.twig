{% extends 'basic.html.twig' %}
{% block content %}
    <div class="row two-column">
        <div class="small-12 medium-8 large-9 columns small-order-2 medium-order-1">
            <h1>{% if title is defined and title %}Category: {{ title }}{% else %}Videos{% endif %}</h1>
            {{ SP.WordPress.content() }}
            <div class="row small-up-1 medium-up-2 video-teasers">
                {% for teaser in teasers %}
                    <div class="column">{{ teaser | raw }}</div>
                {% endfor %}
            </div>
            <div class="pagination">
                {{ SP.WordPress.pagination() }}
            </div>
        </div>
        <div class="small-12 medium-4 large-3 columns small-order-1 medium-order-2">
            <h4>Categories</h4>

            <ul class="vertical menu">
            {% for category in SP.WordPress.getCategories({
                'taxonomy': 'video_categories'
            }) %}

                <li><a href="{{ SP.WordPress.getTermLink(category.term_id) }}">{{ category.name }}</a></li>
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}